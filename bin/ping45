#!/usr/bin/env ruby

require 'json'
require 'httparty'

command = ARGV[0] || 'register'

if command == 'register'
  username =  ARGV[1] || `whoami`.chomp
  mac_address = ARGV[2] || `networksetup -getmacaddress Wi-Fi`.split[2]

  data = {
    user: username,
    mac_address: mac_address
  }

  response = HTTParty.post('http://localhost:3000/computers', body: data)

  unless response.success?
    puts "Nope!"
    exit 1
  else
    puts "Successfully registered #{mac_address} under the name #{username}."
  end
elsif command == 'sniff'
  nmap = `nmap -sn 10.0.12.0/24 | grep MAC`

  data = {}

  data[:computers] =
    nmap.each_line.map do |line|
      line.split[2]
    end

  puts data.to_json

  response = HTTParty.post('http://localhost:3000/ping', body: data)

  unless response.success?
    puts "Nope!"
    exit 1
  end
else
  puts "Unknown command: #{command}"
end

